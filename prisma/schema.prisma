generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  login     String    @unique
  senha     String
  cargo     String?
  role      String    @default("user")
  
  // Novos campos de perfil
  cpf         String?  @unique
  rg          String?
  dataNascimento DateTime?
  telefone    String?
  endereco    String?
  departamento String?
  dataAdmissao DateTime?
  salario     Float?
  foto        String?
  
  criadoEm  DateTime  @default(now())
  atualizadoEm DateTime @updatedAt

  jornadas  Jornada[]
  producoes Producao[]
  ferias    Ferias[]
  folhas    Folha[]
  metas     Meta[]
  bancoHoras BancoHoras[]
  jornadasAprovadas Jornada[] @relation("Aprovador")
}

model Jornada {
  id         Int      @id @default(autoincrement())
  data       DateTime
  entrada    DateTime
  saida      DateTime
  horasTotais Float
  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  
  // Novos campos de aprovação
  status      String   @default("pendente") // "pendente", "aprovado", "rejeitado"
  aprovadoPor Int?
  aprovador   Usuario? @relation("Aprovador", fields: [aprovadoPor], references: [id])
  dataAprovacao DateTime?
  observacao  String?
  
  criadoEm  DateTime  @default(now())
}

model Producao {
  id         Int      @id @default(autoincrement())
  data       DateTime
  tipo       String
  quantidade Int
  observacao String?
  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  criadoEm  DateTime  @default(now())
}

model Ferias {
  id         Int      @id @default(autoincrement())
  inicio     DateTime
  fim        DateTime
  status     String   @default("pendente") // "pendente", "aprovado", "rejeitado"
  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  criadoEm  DateTime  @default(now())
}

model Folha {
  id         Int      @id @default(autoincrement())
  mes        String
  ano        Int
  status     String   @default("pendente")
  valorTotal Float?
  usuarioId  Int
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  criadoEm  DateTime  @default(now())
}

model Meta {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  tipo        String   // "horas", "producao", "vendas"
  descricao   String
  valor       Float
  valorAtual  Float    @default(0)
  mes         String   // "2025-11"
  status      String   @default("ativa") // "ativa", "concluida", "cancelada"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model BancoHoras {
  id          Int      @id @default(autoincrement())
  usuarioId   Int
  usuario     Usuario  @relation(fields: [usuarioId], references: [id])
  saldo       Float    @default(0) // em horas
  mes         String   // "2025-11"
  entrada     Float    @default(0) // horas positivas
  saida       Float    @default(0) // horas negativas
  descricao   String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
